<%= form_with model: [@project, @project.comments.build], class: "space-y-4" do |form| %>
  <div>
    <%= form.label :content, "Your comment", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :content, 
          rows: 3,
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400",
          placeholder: "Write your thoughts..." %>
  </div>

  <div>
    <%= form.submit 'Leave Comment', 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
  </div>
<% end %>