<%= form_with model: @project, class: "max-w-xl space-y-6" do |form| %>

  <div class="space-y-2">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, 
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          placeholder: "Enter project name" %>
  </div>

  <div class="space-y-2">
    <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :status, 
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          placeholder: "Enter project status" %>
  </div>

  <div class="mt-6">
    <%= form.submit class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors" %>
  </div>
<% end %>