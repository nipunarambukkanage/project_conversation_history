<%= form_with model: [@project, @project.status_changes.build], class: "space-y-4" do |form| %>
  <div class="space-y-2">
    <%= form.label :new_status, "New Status", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :new_status, 
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          placeholder: "Enter new status" %>
  </div>

  <div class="mt-4">
    <%= form.submit 'Update Status', 
          class: "inline-flex justify-center w-full rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors" %>
  </div>
<% end %>